<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/chip_menu">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:overScrollMode="ifContentScrolls"
        android:scrollbars="none">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp">
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/unlogin_entire_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_small"
                android:text="전체"/>
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/b_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_small"
                android:text="B타입(5핀)"/>
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/c_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_small"
                android:text="C타입(5핀)"/>
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/bc_type_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:paddingHorizontal="10dp"
                android:layout_margin="0dp"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_small"
                android:text="BC타입(5핀)"/>
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/bc_type_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:paddingHorizontal="10dp"
                android:layout_margin="0dp"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_small"
                android:text="BC타입(7핀)"/>
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/unlogin_speed_dc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:paddingHorizontal="10dp"
                android:layout_margin="0dp"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_small"
                android:text="DC차데모"/>
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/unlogin_speed_ac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_small"
                android:text="AC3상"/>
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/login_speed_dccomb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_small"
                android:text="DC콤보"/>
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/dc_dccomb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:paddingHorizontal="10dp"
                android:layout_margin="0dp"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_small"
                android:text="DC차데모 + DC콤보"/>
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/dc_ac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:paddingHorizontal="10dp"
                android:paddingTop="10dp"
                android:layout_margin="0dp"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_small"
                android:text="DC차데모 + AC3상"/>
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/dc_dccomb_ac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:paddingTop="10dp"
                android:layout_margin="0dp"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_small"
                android:text="DC차데모 + DC콤보 + AC3상"/>
        </RadioGroup>
    </ScrollView>
</LinearLayout>